<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/2002/xmlspec/dtd/2.10/xmlspec.dtd">
<!-- prudent 设置为true 则不同jvm可以的fileAppender可以往同一文件输出内容 -->
<configuration>
	
	<!-- 控制台 -->
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<Encoding>UTF-8</Encoding>
		<Target>System.out</Target>
		<encoder>
			<pattern>[Manager-Web] %d{MM/dd HH:mm:ss.SSS} [%-16thread] %-5level [%logger{10}.%-3line] %msg%n</pattern>
		</encoder>
	</appender>
	
	<!-- 全部日志（每天一个） -->
	<appender name="ALL_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<Encoding>UTF-8</Encoding>
		<encoder>
			<pattern>[Manager-Web] %d{MM/dd HH:mm:ss.SSS} [%-16thread] %-5level [%logger{10}.%-3line] %msg%n</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${catalina.home}/logs/creditlink-Manager-Web/all.%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
	</appender>

	<!-- ERROR日志（每天一个） -->
	<appender name="ERR_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${catalina.home}/logs/creditlink-Manager-Web/err.log</file>
		<Encoding>UTF-8</Encoding>
		<encoder>
			<pattern>[Manager-Web] %d{MM/dd HH:mm:ss.SSS} [%-16thread] %-5level [%logger{10}.%-3line] %msg%n</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${catalina.home}/logs/creditlink-Manager-Web/err.log.%d{yyyy-MM-dd}</fileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>ERROR</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
	</appender>
	
	<!-- 总开关 -->
	<root level="DEBUG">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="ALL_LOG" />
		<appender-ref ref="ERR_LOG" />
	</root>
	
	<!-- 日志过滤 -->
	<logger name="org.springframework" level="INFO" />
	<logger name="org.springframework.remoting" level="ERROR" />
	<logger name="org.springframework.remoting.caucho" level="INFO" />
	<logger name="org.springframework.transaction" level="INFO" />
	<logger name="org.springframework.jdbc" level="INFO" />
	<logger name="org.apache.commons" level="INFO" />
	<logger name="org.apache.activemq" level="INFO" />
	<logger name="org.apache.axis" level="INFO" />
	<logger name="org.apache.http" level="INFO" />
	<logger name="org.mybatis" level="INFO" />
	<logger name="httpclient.wire.content" level="ERROR" />
	<logger name="httpclient.wire.header" level="ERROR" />
	<logger name="com.mchange" level="INFO" />
	<logger name="org.apache.zookeeper" level="INFO" />
	<logger name="org.apache.zookeeper.ClientCnxn" level="ERROR" />
	<logger name="com.alibaba.dubbo" level="INFO" />
	<logger name="com.alibaba.dubbo.remoting.exchange.support.header.HeartBeatTask" level="ERROR" />
	<logger name="com.alibaba.dubbo.monitor.dubbo.DubboMonitor" level="OFF" />
	


	<!-- Rolling file 特特定化MQ日志打印输出目的地 -->
	<appender name="currentIncome"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<encoder>
	      <pattern>[creditlink-Manager-Web] %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{80} [%file : %line] %msg%n</pattern>
	    </encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${catalina.home}/logs/creditlink-Manager-Web/currentIncome.%d{yyyy-MM-dd}.log</fileNamePattern>
		</rollingPolicy>
	</appender>

</configuration>